<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="120dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_dialoge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:textColor="@color/colorWhite"
            android:text="Location Country Name"/>
        <TextView
            android:id="@+id/location_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/colorWhite"
            android:text="Location City Name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="6"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="135dp"
            android:layout_height="32dp"
            android:layout_weight="3"
            android:id="@+id/btn_review_location"
            android:src="@drawable/review_loc"/>
        <ImageView
            android:id="@+id/btn_see_existing"
            android:layout_width="135dp"
            android:layout_height="32dp"
            android:layout_weight="3"
            android:src="@drawable/see_existing"/>
    </LinearLayout>
</RelativeLayout>