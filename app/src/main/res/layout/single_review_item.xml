<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dotted_border"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/location_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Name"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/background_color"/>
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/location_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:maxHeight="20dp"
            android:layout_marginTop="2dp"
            android:maxWidth="20dp"
            android:minWidth="20dp"
            android:rating="0"
            android:layout_centerHorizontal="true"
            app:mrb_secondaryProgressTint="@color/background_color"
            app:mrb_progressTint="@color/background_color"/>
        <TextView
            android:id="@+id/location_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Review and comment"
            android:layout_marginTop="2dp"
            android:textSize="11dp"
            android:textColor="#B7B7B7"/>
        <TextView
            android:id="@+id/location_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 January 2018 at 11:37am"
            android:textSize="10dp"
            android:layout_marginTop="2dp"
            android:gravity="end"
            android:textColor="#B7B7B7"
            />
    </LinearLayout>

</LinearLayout>